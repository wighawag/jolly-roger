{
  "name": "jolly-roger-web",
  "version": "0.0.1",
  "description": "Frontend for jolly-roger.",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "1.22.6",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "abitype": "^0.9.6",
    "autoprefixer": "^10.4.15",
    "daisyui": "^3.5.1",
    "eip-1193": "^0.4.7",
    "ipfs-gateway-emulator": "4.2.1-ipfs.2",
    "postcss": "^8.4.31",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "pwag": "^0.1.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.8",
    "ethereum-indexer-browser": "^0.6.5",
    "ethereum-tx-observer": "^0.0.2",
    "jolly-roger-common": "workspace:*",
    "jolly-roger-indexer": "workspace:*",
    "lodash-es": "^4.17.21",
    "named-logs": "^0.2.2",
    "radiate": "^0.0.1",
    "theme-change": "^2.5.0",
    "viem": "^1.6.0",
    "web3-connection": "^0.1.0",
    "web3-connection-viem": "^0.0.1"
  },
  "scripts": {
    "prepare": "pwag static/icon.svg src/web-config.json",
    "dev": "echo 'waiting for src/data/contracts.ts...'; wait-on src/data/contracts.ts && vite dev",
    "build": "npm run prepare && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format:check": "prettier --plugin-search-dir . --check .",
    "format": "prettier --plugin-search-dir . --write .",
    "svelte-check": "svelte-check",
    "serve": "ipfs-emulator --only -d build -p 8080"
  }
}
